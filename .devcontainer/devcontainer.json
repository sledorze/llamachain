{
	"name": "llamachain",
	"dockerComposeFile":[
		"../compose.yaml"
	],
	"service": "langchain",
	"workspaceFolder": "/workspaces/llamachain",
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.black-formatter",
				"dbaeumer.vscode-eslint",
				"ms-toolsai.jupyter",
				"ms-python.isort"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

